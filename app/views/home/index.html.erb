<!-- Banner Section -->
<div class="bg-gray-800 text-gray-100 text-center py-20">
  <h1 class="text-5xl font-bold mb-4 text-white">Welcome to Crocs Central!</h1>
  <p class="text-xl mb-8 text-gray-200">Your Ultimate Destination for All Things Crocs!</p>
  <%= link_to "Shop Now", root_path, class: "bg-coolMint hover:bg-gray-200 text-gray-900 font-bold py-2 px-4 rounded" %>
</div>

<!-- Categories Section -->
<div class="flex flex-wrap justify-center mt-8 items-center gap-10">
  <% @main_categories.each do |category| %>
    <%= link_to category_path(category) do %>
      <div class="flex flex-col mb-4 bg-white p-4 shadow-lg rounded-lg">
        <h2 class="text-gray-800 font-medium text-lg text-center mb-6"><%= category.name %></h2>
        <%= category.image.present? ? image_tag(category.image, class: "max-w-lg") : image_tag("http://via.placeholder.com/512") %>
      </div>
    <% end %>
  <% end %>
</div>

<!-- Testimonials Section -->
<div class="bg-white py-20 my-10">
  <div class="container mx-auto px-6">
    <h2 class="text-4xl font-bold text-gray-800 mb-8">Customer Testimonials</h2>
    <div class="flex flex-wrap">
      <div class="w-full md:w-1/3 px-2 mb-4">
        <div class="bg-white rounded shadow py-4 px-4">
          <p class="text-gray-700 text-base mb-4">
            "I love my new Crocs from Crocs Central! Fast shipping and excellent customer service – I’m already planning my next purchase."
          </p>
          <p class="text-gray-500 text-xs">
            - John
          </p>
        </div>
      </div>
      <div class="w-full md:w-1/3 px-2 mb-4">
        <div class="bg-white rounded shadow py-4 px-4">
          <p class="text-gray-700 text-base mb-4">
            "Crocs Central made it so easy to find the perfect pair! The variety is amazing, and my feet have never felt more comfortable."
          </p>
          <p class="text-gray-500 text-xs">
            - Susan
          </p>
        </div>
      </div>
      <div class="w-full md:w-1/3 px-2 mb-4">
        <div class="bg-white rounded shadow py-4 px-4">
          <p class="text-gray-700 text-base mb-4">
            "Crocs Central is my go-to for all things Crocs! The styles are fantastic, and the comfort is unmatched. Highly recommend!"
          </p>
          <p class="text-gray-500 text-xs">
            - Jane
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Subscription Section -->
<div class="bg-gray-800 text-gray-100 my-10 text-center py-20">
  <h2 class="text-3xl font-bold mb-6">Stay in the loop with Crocs Central!</h2>
  <p class="mb-8 text-gray-300">Subscribe to our newsletter for exclusive deals, new arrivals, and the latest Crocs trends straight to your inbox.</p>
  <%= form_with url: root_path, method: :post, local: true, class: "flex justify-center" do %>
    <%= email_field_tag :email, nil, placeholder: "Enter your email", class: "p-2 rounded-l text-gray-900" %>
    <%= submit_tag "Subscribe", class: "bg-coolMint hover:bg-teal-500 cursor-pointer text-gray-900 font-bold py-2 px-4 rounded-r" %>
  <% end %>
</div>
