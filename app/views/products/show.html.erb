<div class="flex justify-center gap-20 py-10">
  <!-- Image Gallery -->
  <div class="flex flex-wrap max-w-lg bg-white p-4 rounded-lg shadow-md">
    <% @product.images.each do |image| %>
      <%= image_tag image, class: "w-auto h-64 rounded-lg" %>
    <% end %>
  </div>
  <!-- Product Details -->
  <div data-controller="products" data-products-product-value="<%= @product.to_json %>" class="flex flex-col items-start max-w-sm bg-white p-6 shadow-lg rounded-lg">
    <h1 class="font-bold text-4xl uppercase text-gray-800"><%= @product.name %></h1>
    <p class="text-2xl mt-4 text-gray-800">$<%= (@product.price/100.0).to_s %></p>
    <p class="text-md py-8 text-gray-700"><%= @product.description %></p>
    <div class="my-8">
      <p class='uppercase text-lg text-gray-800'>Size</p>
      <% @product.stocks.each do |stock| %>
        <% if stock.amount > 0 %>
          <button data-action="click->products#selectSize" value="<%= stock.size %>" class="bg-coolMint text-white font-semibold py-2 px-4 rounded hover:bg-mintGreen focus:outline-none focus:ring-2 focus:ring-coolMint focus:ring-opacity-50">
            <%= stock.size %>
          </button>
        <% else %>
          <button disabled value="<%= stock.size %>" class="bg-gray-400 text-gray-200 font-semibold py-2 px-4 rounded cursor-not-allowed">
            <%= stock.size %>
          </button>
        <% end %>
      <% end %>
    </div>
    <div id="selected-size"></div>
    <button data-action="click->products#addToCart" class="inline-flex items-center justify-center px-5 py-3 border border-transparent font-medium rounded-md text-white bg-coolMint hover:bg-mintGreen focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-coolMint">
      Add To Cart
    </button>
  </div>
</div>
