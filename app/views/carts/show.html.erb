<div class="min-h-screen bg-white text-gray-900 flex flex-col items-center pt-8">
  <h1 class="text-4xl font-bold text-coolMint mb-4">Cart Page</h1>
  <div id="errorContainer" class="mt-4 text-red-500"></div>
  <div data-controller="cart" class="text-center">
    <div class="mt-4 font-medium text-gray-700" id="total"></div>
    <button class="mt-6 py-2 px-4 bg-coolMint hover:bg-teal-500 rounded text-gray-900" data-action="click->cart#checkout">Checkout</button>
    <button class="mt-4 py-2 px-4 bg-teal-500 hover:bg-coolMint rounded text-gray-900" data-action="click->cart#clear">Clear Cart</button>
  </div>
</div>
